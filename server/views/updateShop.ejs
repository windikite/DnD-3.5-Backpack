<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/header.ejs") %>
    <%- include("./partials/navbar.ejs") %>
    <body>
        <h1>Update Shop</h1>
        <a href="/shops/<%=results.id%>">Stop Editing</a>
        <form action="/api/shops/update-shop/<%=results.id%>?_method=PUT" method="post">
            <label for="Name">Name</label>
            <input type="text" id="Name" name="Name" placeholder="<%=results.Name%>" value="<%=results.Name%>">
            <br><br>
            <label for="Type">Type</label>
            <input type="text" id="Type" name="Type" placeholder="<%=results.Type%>" value="<%=results.Type%>">
            <br><br>
            <label for="Location">Location</label>
            <input type="text" id="Location" name="Location" placeholder="<%=results.Location%>" value="<%=results.Location%>">
            <br><br>
            <label for="CurrentCash">CurrentCash</label>
            <input type="text" id="CurrentCash" name="CurrentCash" placeholder="<%=results.CurrentCash%>" value="<%=results.CurrentCash%>">
            <br><br>
            <label for="MaxItemValue">MaxItemValue</label>
            <input type="text" id="MaxItemValue" name="MaxItemValue" placeholder="<%=results.MaxItemValue%>" value="<%=results.MaxItemValue%>">
            <br><br>
            <label for="MaxLevel">MaxLevel</label>
            <input type="text" id="MaxLevel" name="MaxLevel" placeholder="<%=results.MaxLevel%>" value="<%=results.MaxLevel%>">
            <br><br>
            <label for="MaxWeight">MaxWeight</label>
            <input type="text" id="MaxWeight" name="MaxWeight" placeholder="<%=results.MaxWeight%>" value="<%=results.MaxWeight%>">
            <br><br>
            <label for="CanIdentify">Caster Level</label>
            <input type="text" id="CanIdentify" name="CanIdentify" placeholder="<%=results.CanIdentify%>" value="<%=results.CanIdentify%>">
            <br><br>
            <label for="DC">DC</label>
            <input type="text" id="DC" name="DC" placeholder="<%=results.DC%>" value="<%=results.DC%>">
            <br><br>
            <input type="submit" name="_method" value="Update Shop">
        </form>
    </body>
</html>